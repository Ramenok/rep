rez = []
with open("scientist.txt", "r", encoding="utf-8") as f:
    li = [i.split('#') for i in f]
li = li[1:]
for i in li:
    if i[1] == 'Аллопуринол':
        rez.append([i[2], i[0]])
print('Разработчиками Аллопуринола были такие люди')
for i in sorted(rez):
    print(i[1] + ' - ' + i[0])
print('Оригинальный рецепт принадлежит:', sorted(rez)[0][1])
